@import 'nib'
@import 'normalize'

h1, h2, h3, h4, h5
    font-weight 500

#greeting
    font-weight 400
    font-size 80px
    line-height 0.6

#nice
    font-weight 200
    font-size 45px
    padding-top 10px
    padding-left 2px
    padding-bottom 5px
    color #757575

body
    display table-cell
    vertical-align middle
    margin 0 auto
    text-align left
    padding 80px
    font-weight 200

.languages
    padding-top 15px

#langHead
    font-weight 300
    padding-left 2px
    font-size 45px
    color #757575
    line-height 1.2
    padding-bottom 5px
p
    line-height 1.3
    padding-left 4px
    font-size 23px
    font-weight 300

#langSub
    font-weight 300
    font-size 25px
    color #9E9E9E
    line-height 1.5
    padding-bottom 3px

.description
    line-height 1.3
    padding-left 2px
    padding-bottom 20px
