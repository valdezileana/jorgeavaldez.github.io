@import 'nib'
@import 'normalize'

h1, h2, h3, h4, h5
    font-weight 500

#greeting
    font-weight 400
    font-size 80px
    line-height 0.6

    animation fadein 3s
    -webkit-animation fadein 3s
    -moz-animation fadein 3s

#nice
    font-weight 200
    font-size 45px
    padding-top 15px
    padding-left 2px
    padding-bottom 5px
    color #757575

    animation fadein 7s
    -webkit-animation fadein 7s
    -moz-animation fadein 7s

body
    display table-cell
    vertical-align middle
    margin 0 auto
    text-align left
    padding 100px
    padding-top 200px
    font-weight 200

p
    line-height 1.3
    padding-left 4px
    font-size 30px
    font-weight 300

    animation fadein 10s
    -webkit-animation fadein 10s
    -moz-animation fadein 10s

.languages
    padding-top 100px

    animation fadein 15s
    -webkit-animation fadein 15s
    -moz-animation fadein 15s

#langHead
    font-weight 300
    padding-left 2px
    font-size 45px
    color #757575
    line-height 1.2
    padding-bottom 5px

#langSub
    font-weight 300
    font-size 25px
    color #9E9E9E
    line-height 1.5
    padding-bottom 3px

.description
    line-height 1.3
    padding-left 2px
    padding-bottom 20px

// Fade-In Animation Declaration

@-webkit-keyframes fadein
  from
    opacity 0
  to
    opacity 1

@-moz-keyframes fadein
  from
    opacity 0
  to
    opacity 1

@keyframes fadein
  from
    opacity 0
  to
    opacity 1
